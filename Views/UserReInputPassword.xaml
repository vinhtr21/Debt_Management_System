<Window x:Class="Debt_Management.Views.UserReInputPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Debt_Management.Views"
        mc:Ignorable="d"
        Title="UserReInputPassword" Height="150" Width="350">
    <Grid>
        <Label Height="30" HorizontalAlignment="Center" VerticalAlignment="Top">Security. Please Re-input your password.</Label>
        <Label Height="30" >Password</Label>
        <PasswordBox Height="35" Margin="70 0 10 0" Name="txtPassword"></PasswordBox>
        <Button Height="20" Width="40" Name="btnOk" Click="btnOk_Click" Margin="0,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">OK</Button>
    </Grid>
</Window>
